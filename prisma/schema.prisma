datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Title {
  MR
  MRS
}

model Student {
  spuId      String   @id @db.VarChar(16)
  title       Title
  firstName  String
  middleName String
  lastName   String
  batch       String
  course      String
  nationality String
  dob         DateTime
  address     String
  Result      Result[]
}

model Result {
  id            Int     @id @default(autoincrement())
  student       Student @relation(references: [spuId])
  sem String
  examMonth String
  examYear String
  type String
  spi  Float
}

model Subject{
  id            Int     @id @default(autoincrement())
  subCode String
  subName String
  sem String
  course String
  batch String
}

model Marks{
  result Result @relation(referances: [id])
  subject Subject @relation(referances: [id])
}


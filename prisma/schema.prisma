// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Title {
  Mr
  Mrs
}

model Student {
  spuId       String   @id @db.VarChar(16)
  title       Title
  firstName   String
  middleName  String
  lastName    String
  batch       String
  course      String
  nationality String
  dob         String
  address     String
  Result      Result[]
}

model Result {
  // uuid
  id        String  @id
  student   Student @relation(references: [spuId], fields: [fspuId])
  fspuId    String  @db.VarChar(16)
  sem       String
  examMonth String
  examYear  String
  type      String
  spi       Float
  Marks     Marks[]

  @@unique([sem, fspuId])
}

model Subject {
  subCode String  @id
  subName String
  sem     String
  course  String
  batch   String
  Marks   Marks[]
}

model Marks {
  id             Int     @id @default(autoincrement())
  result         Result  @relation(references: [id], fields: [fid])
  subject        Subject @relation(fields: [subjectSubCode], references: [subCode])
  fid            String
  subjectSubCode String
  internal       Int
  internalTotal  Int
  external       Int
  externalTotal  Int
  grade          String
  points         Float
  percentage     Float
}
